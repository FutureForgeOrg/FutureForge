<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{name}} | Terminal Portfolio</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            fontFamily: {
              mono: ['"Fira Code"', "monospace"],
            },
            colors: {
              terminalBg: "#0f0f0f",
              terminalText: "#00ff00",
              dim: "#33ff33",
            },
            animation: {
              fadeIn: "fadeIn 1s ease-out both",
            },
            keyframes: {
              fadeIn: {
                "0%": { opacity: 0 },
                "100%": { opacity: 1 },
              },
            },
          },
        },
      };
    </script>
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <style>
      ::selection {
        background: #00ff00;
        color: #000;
      }
    </style>
  </head>

  <body class="bg-terminalBg text-terminalText font-mono px-4 py-6">

    <!-- Terminal Header -->
    <div class="max-w-3xl mx-auto border border-dim p-4 rounded animate-fadeIn">
      <p class="text-dim">user@portfolio:~$</p>
      <h1 class="text-3xl font-bold mt-1">Hello, I’m {{name}}</h1>
      <p class="text-dim mt-1">=> {{title}}</p>
    </div>

    <!-- About -->
    <div class="max-w-3xl mx-auto border border-dim p-4 rounded mt-6 animate-fadeIn">
      <p class="text-dim">user@portfolio:~$ cat about.txt</p>
      <p class="mt-2 whitespace-pre-line">{{about}}</p>
    </div>

    <!-- Skills -->
    <div class="max-w-3xl mx-auto border border-dim p-4 rounded mt-6 animate-fadeIn">
      <p class="text-dim">user@portfolio:~$ ls skills/</p>
      <ul class="flex flex-wrap gap-3 mt-2">
        {{#each skills}}
        <li class="bg-dim text-terminalBg px-2 py-1 rounded text-sm">{{this}}</li>
        {{/each}}
      </ul>
    </div>

    <!-- Experience -->
    {{#if experience.length}}
    <div class="max-w-3xl mx-auto border border-dim p-4 rounded mt-6 animate-fadeIn">
      <p class="text-dim">user@portfolio:~$ cat experience.log</p>
      {{#each experience}}
      <div class="mt-4">
        <h3 class="text-lg font-bold">{{role}} @ {{company}}</h3>
        <p class="text-dim text-sm">{{duration}}</p>
        <p class="mt-1">{{description}}</p>
      </div>
      {{/each}}
    </div>
    {{/if}}

    <!-- Projects -->
    <div class="max-w-3xl mx-auto border border-dim p-4 rounded mt-6 animate-fadeIn">
      <p class="text-dim">user@portfolio:~$ ls projects/</p>
      {{#each projects}}
      <div class="mt-4">
        <h3 class="text-lg font-bold">{{title}}</h3>
        <p class="mt-1">{{description}}</p>
        <a
          href="{{link}}"
          target="_blank"
          class="underline hover:text-dim text-sm mt-1 inline-block"
        >
          ➜ Live Demo
        </a>
      </div>
      {{/each}}
    </div>

    <!-- Education -->
    <div class="max-w-3xl mx-auto border border-dim p-4 rounded mt-6 animate-fadeIn">
      <p class="text-dim">user@portfolio:~$ cat education.md</p>
      {{#each education}}
      <div class="mt-3">
        <h3 class="text-lg font-bold">{{degree}}</h3>
        <p class="text-dim text-sm">{{institution}} ({{year}})</p>
      </div>
      {{/each}}
    </div>

    <!-- Social -->
    <div class="max-w-3xl mx-auto border border-dim p-4 rounded mt-6 text-center animate-fadeIn">
      <p class="text-dim">user@portfolio:~$ ping social</p>
      <div class="mt-2 flex flex-wrap justify-center gap-4">
        {{#each social}}
        <a
          href="{{link}}"
          target="_blank"
          class="hover:text-dim underline text-sm"
        >
          {{platform}}
        </a>
        {{/each}}
      </div>
      <p class="text-dim mt-4 text-xs">© {{name}} — Terminal Theme</p>
    </div>

  </body>
</html>
